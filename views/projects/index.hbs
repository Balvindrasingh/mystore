<h1>
    Inventory
</h1>
{{!-- CRUD Functionality --}}
{{!-- CREATE button --}}
{{! Only show CRUD buttons if there's a session (authenticated user) }}
{{#if user}}
  <a href="/projects/add">Add a new Item</a>
{{/if}}
{{!-- READ Show Table to view all projects in db --}}

<style>
    table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
    font-family: Arial, sans-serif;
}

thead {
    background-color: #3b69c0;
    color: white;
}

th {
    padding: 12px 15px;
    text-align: left;
    font-size: 1.1em;
}

tr:nth-child(even) {
    background-color: #f2f2f2;
}



td {
    padding: 12px 15px;
    text-align: left;
}

th, td {
    border: 1px solid #ddd;
}

table {
    margin-bottom: 20px;
}

    
</style>




<table  >
    <thead   >
        <th>Name</th>
        <th>Status</th>
        <th></th>
    </thead>
    <tbody>
        {{!-- Retrieve all projects and loop --}}
        {{#each dataset}}
        <tr>
            <td>{{this.name}}</td>
            {{!-- Use the hbs helper function to format the date accordingly --}}
            <td>{{this.status}}</td>
            {{!-- UPDATE and DELETE buttons --}}
            <td>
                {{! Only show CRUD buttons if there's a session (authenticated user) }}
                {{!-- use ../ to navigate out of the for loop into the global scope --}}
                {{#if ../user}}
                <a href="/projects/edit/{{this._id}}" class="btn btn-primary">Edit</a>
                <a
                    href="/projects/delete/{{this._id}}"
                    onclick="return confirmDeletion()"
                    class="btn btn-danger"
                >Delete</a>
                {{/if}}
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
