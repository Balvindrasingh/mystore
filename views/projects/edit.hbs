<h1>
  {{title}}
</h1>


<style>
h1 {
    text-align: center;
    font-size: 2em;
    margin-bottom: 20px;
    color: #333;
}

form {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    border: 1px solid #ddd;
    background-color: #f9f9f9;
    border-radius: 8px;
}

fieldset {
    border: none;
    margin-bottom: 15px;
}

label {
    display: inline-block;
    width: 120px;
    text-align: right;
    font-size: 1.1em;
    margin-right: 10px;
}

input, select, button {
    width: calc(100% - 140px); /* Adjust width to account for label space */
    padding: 8px;
    font-size: 1em;
    border-radius: 4px;
    border: 1px solid #ccc;
}

input:focus, select:focus, button:focus {
    border-color: #4CAF50;
    outline: none;
}

button {
    width: 80%;
    background-color: #4CAF50;
    color: white;
    font-size: 1.2em;
    padding: 10px;
    border: none;
    margin-right: 5%;
    cursor: pointer;
    border-radius: 4px;
    margin-top: 20px;
}

button:hover {
    background-color: #80a5d6;
}

.col-2 {
    font-weight: bold;
}

select {
    width: 100%;
    padding: 8px;
    font-size: 1em;
    border-radius: 4px;
    border: 1px solid #ccc;
}

select option {
    padding: 10px;
}



</style>

<form method="POST">
  {{! Input names have to match the name of the fields in the mongo schema object }}
  {{! Mapping is not automatic, but it's best practices }}
  <fieldset>
    <label for="name" class="col-2">
      Name:
    </label>
    <input name="name" id="name" required value="{{project.name}}" />
  </fieldset>
  {{! Add fieldset for status }}
  <fieldset>
    <label for="status" class="col-2">
      Status:
    </label>
    {{! <input name="course" id="course" required /> }}
    <select name="status" id="status">
        {{! Use HBS helper function to customize rendering }}
        {{createOptionElement "For sale" project.status}}
        {{createOptionElement "Sold" project.status}}
        {{createOptionElement "Out of Stock" project.status}}
    </select>
  </fieldset>
  {{! Button needs to be inside <form> element to trigger POST }}
  <button class="offset-3 btn btn-primary">
    Save
  </button>
</form>