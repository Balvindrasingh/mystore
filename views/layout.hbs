{{! Global View Template in HBS format }}

<html>
  <head>
    <title>{{title}}</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    {{! Bootstrap CSS }}
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
<style>

body {
  font-family: Arial, sans-serif;
  background-color: #f4f4f9;
  margin: 0;
  padding: 0;
}

.jumbotron {
  background-color: #007bff;
  color: white;
  padding: 30px 20px;
  border-radius: 8px;
  margin-bottom: 20px;
  text-align: center;
}

.navbar {
  margin-bottom: 20px;
  border-bottom: 2px solid #ddd;
}

.navbar-nav .nav-link {
  font-size: 1.1rem;
  padding: 10px 15px;
}

.navbar-nav .nav-link:hover {
  background-color: #556c85;
  color: white;
  border-radius: 4px;
}

.navbar-nav .nav-link.active {
  font-weight: bold;
  color: #6f7881;
  
}

footer {
  background-color: #343a40;
  color: white;
  text-align: center;
  padding: 15px;
  position: fixed;
  width: 100%;
  bottom: 0;
}

main {
  padding: 20px;
  margin-top: 20px;
  background-color: white;
  border-radius: 8px;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
}

button, .btn {
  padding: 12px 20px;
  font-size: 1rem;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

button:hover, .btn:hover {
  opacity: 0.9;
}

input[type="text"],
input[type="email"],
input[type="password"],
select,
textarea {
  width: 100%;
  padding: 12px;
  margin-bottom: 15px;
  border-radius: 4px;
  border: 1px solid #ccc;
  font-size: 1rem;
}

input[type="text"]:focus,
input[type="email"]:focus,
input[type="password"]:focus,
select:focus,
textarea:focus {
  border-color: #7fa7d3;
  outline: none;
}

table {
  width: 100%;
  margin: 20px 0;
  border-collapse: collapse;
  background-color: white;
  border-radius: 8px;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
}

table th,
table td {
  padding: 12px 20px;
  text-align: left;
  border: 1px solid #ddd;
}

table th {
  background-color: #3581d3;
  color: white;
}

table tr:nth-child(even) {
  background-color: #f2f2f2;
}

table tr:hover {
  background-color: #e9ecef;
}

.card {
  background-color: white;
  border-radius: 8px;
}

</style>

  </head>
  <body>
    {{! Jumbotron Header }}
    <div class="mt-4 p-5 bg-primary text-white rounded">
      <h1>my Clothing Store</h1>
      <p>Collection of Items</p>
    </div>
    {{! Navbar }}
    <!-- Grey with black text -->
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/Projects">Items</a>
          </li>
        </ul>
        <ul class="navbar-nav ml-auto">
          {{#if user}}
            <li class="nav-item">
              <a class="nav-link" href="#">{{user.username}}</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/Logout">Logout</a>
            </li>
          {{else}}
            <li class="nav-item">
              <a class="nav-link" href="/Register">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/Login">Login</a>
            </li>
          {{/if}}
        </ul>
      </div>
    </nav>
    {{! renders content from an individual view file }}
    {{{body}}}
    {{! Bootstrap JS }}
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"
      integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V"
      crossorigin="anonymous"
    ></script>
    {{!-- no need to reference /public/* --}}
    <script src="/javascripts/scripts.js"></script>
  </body>
</html>